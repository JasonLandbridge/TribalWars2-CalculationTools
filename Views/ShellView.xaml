                    Maximum="99999"
                    Minimum="0"
                    TextAlignment="Center"
                    Value="{Binding SelectedCalculatorData.Spearman.NumberOnAttack, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <xctk:IntegerUpDown
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="100"
                    Margin="5,5"
                    AllowSpin="True"
                    FormatString="N0"
                    Increment="1"
                    Maximum="99999"
                    Minimum="0"
                    TextAlignment="Center"
                    Value="{Binding SelectedCalculatorData.Spearman.NumberOnDefense, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>-->

            <!--  Units input rows  -->
            <ItemsControl
                x:Name="UnitsInputRows"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                ItemsSource="{Binding SelectedCalculatorData.Units, Mode=TwoWay}">

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                Orientation="Horizontal">
                                <Image Width="40" Source="{Binding ImagePath}" />
                                <Label
                                    MinWidth="100"
                                    Margin="0,5"
                                    Content="{Binding Name}" />
                            </StackPanel>
                            <xctk:IntegerUpDown
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="100"
                                Margin="5,5"
                                AllowSpin="True"
                                FormatString="N0"
                                Increment="1"
                                Maximum="99999"
                                Minimum="0"
                                TextAlignment="Center"
                                Value="{Binding NumberOnAttack, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <xctk:IntegerUpDown
                                Grid.Row="0"
                                Grid.Column="2"
                                Width="100"
                                Margin="5,5"
                                AllowSpin="True"
                                FormatString="N0"
                                Increment="1"
                                Maximum="99999"
                                Minimum="0"
                                TextAlignment="Center"
                                Value="{Binding NumberOnDefense, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!--  Church input rows  -->
            <ContentControl
                x:Name="InputChurch"
                Grid.Row="2"
                Grid.Column="0" />
            <CheckBox
                Grid.Row="2"
                Grid.Column="1"
                IsChecked="{Binding SelectedCalculatorData.InputAtkChurch, Mode=TwoWay}" />
            <CheckBox
                Grid.Row="2"
                Grid.Column="2"
                IsChecked="{Binding SelectedCalculatorData.InputDefChurch, Mode=TwoWay}" />

            <!--  Morale input rows  -->
            <ContentControl
                x:Name="InputMorale"
                Grid.Row="3"
                Grid.Column="0" />

            <xctk:DecimalUpDown
                Grid.Row="3"
                Grid.Column="1"
                Width="100"
                Margin="5,5"
                AllowSpin="True"
                FormatString="P0"
                Increment=".01"
                Maximum="1"
                Minimum="0"
                Value="{Binding SelectedCalculatorData.InputMorale, Mode=TwoWay}" />

            <!--  Luck input rows  -->
            <ContentControl
                x:Name="InputLuck"
                Grid.Row="4"
                Grid.Column="0" />

            <xctk:IntegerUpDown
                Grid.Row="4"
                Grid.Column="1"
                Width="100"
                Margin="5,5"
                AllowSpin="True"
                FormatString="N0"
                Increment="1"
                Maximum="15"
                Minimum="-15"
                Value="{Binding SelectedCalculatorData.InputLuck, Mode=TwoWay}" />

            <!--  Wall input rows  -->
            <ContentControl
                x:Name="InputWall"
                Grid.Row="5"
                Grid.Column="0" />

            <xctk:IntegerUpDown
                Grid.Row="5"
                Grid.Column="1"
                Width="100"
                Margin="5,5"
                AllowSpin="True"
                FormatString="N0"
                Increment="1"
                Maximum="20"
                Minimum="0"
                Value="{Binding SelectedCalculatorData.InputWall, Mode=TwoWay}" />

            <!--  Nightbonus input rows  -->
            <ContentControl
                x:Name="InputNightBonus"
                Grid.Row="6"
                Grid.Column="0" />
            <CheckBox
                Grid.Row="6"
                Grid.Column="2"
                IsChecked="{Binding SelectedCalculatorData.InputNightBonus, Mode=TwoWay}" />

        </Grid>

    </Grid>
</Window>
