<Window
    x:Class="CalculationTools.App.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CalculationTools.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="Settings Window"
    Width="800"
    Height="500"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <DockPanel>
        <!--  Tabs  -->
        <TabControl
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            DockPanel.Dock="Bottom">
            <TabItem
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Header="Accounts">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.ColumnSpan="2"
                        Margin="5"
                        Content="All account information will be stored locally and only used to access game data." />

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Orientation="Vertical">
                        <StackPanel Margin="5" Orientation="Horizontal">
                            <Label Width="100" Content="Username" />
                            <TextBox Width="250" Text="{Binding Username}" />
                        </StackPanel>
                        <StackPanel Margin="5" Orientation="Horizontal">
                            <Label Width="100" Content="Password" />
                            <TextBox Width="250" Text="{Binding Password}" />
                        </StackPanel>
                        <StackPanel Margin="5" Orientation="Horizontal">
                            <Label Width="100" Content="Server" />
                            <ComboBox
                                Width="250"
                                Height="30"
                                ItemsSource="{Binding ServerList}"
                                SelectedValue="{Binding ServerCountryCode}"
                                SelectedValuePath="ServerCountryCode">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image
                                                MaxWidth="30"
                                                MaxHeight="24"
                                                Margin="2"
                                                Source="{Binding ImagePath}" />
                                            <TextBlock
                                                Margin="5,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Text="{Binding ServerName}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        <Button
                            Width="350"
                            Height="25"
                            Margin="5"
                            HorizontalAlignment="Center"
                            Command="{Binding CheckAccountCommand}"
                            Content="{Binding CheckLoginButtonText}"
                            IsEnabled="{Binding CheckLoginButtonEnabled}" />
                        <Label HorizontalAlignment="Center" Content="{Binding CheckLoginMessage}" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="auto"
                        Orientation="Vertical">
                        <Label Margin="5" Content="Default world:" />
                        <ComboBox
                            Width="250"
                            Height="25"
                            Margin="5"
                            HorizontalAlignment="Left"
                            ItemsSource="{Binding ServerList}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                            MaxWidth="64"
                                            MaxHeight="64"
                                            Source="{Binding}" />
                                        <TextBlock Text="{Binding}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <Button
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="100"
                        Height="30"
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Command="{Binding CloseCommand}"
                        Content="Close" />
                </Grid>

            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
